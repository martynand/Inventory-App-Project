<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.martyna.scholarshipproject_inventoryapp.ProductListActivity">

    <ListView
        android:id="@+id/products_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/empty_title_text"
            style="@style/EmptyTextViewTitle"
            android:paddingTop="@dimen/activity_margin_large"
            android:text="@string/empty_view_title_text"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/empty_subtitle_text"
            style="@style/EmptyTextViewTitle"
            android:layout_below="@+id/empty_title_text"
            android:paddingTop="@dimen/activity_margin_small"
            android:text="@string/empty_view_subtitle_text"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/colorGrey" />

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/new_entry_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/add_product_button_margin"
        android:src="@drawable/ic_add_circle_black_24dp" />
</RelativeLayout>

